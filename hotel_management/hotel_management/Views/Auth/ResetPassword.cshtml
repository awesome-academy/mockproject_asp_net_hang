@model hotel_management.ViewModels.ResetPasswordViewModel

@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
        <h3 class="text-center mb-4">Đặt lại mật khẩu</h3>

        @using (Html.BeginForm("ResetPassword", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Token)

            <div class="mb-3">
                <label for="NewPassword" class="form-label">Mật khẩu mới</label>
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "required" })
            </div>

            if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary()
                </div>
            }

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Xác nhận</button>
            </div>
        }
    </div>
</div>
